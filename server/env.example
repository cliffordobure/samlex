# Samlex Production Environment Configuration
# Copy this file to .env in the server directory

# Environment
NODE_ENV=production
PORT=5000

# Database
MONGO_URI=your_mongodb_connection_string

# JWT
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRE=7d

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password

# Client URL - IMPORTANT: This should point to your production frontend
CLIENT_URL=https://samlex-client.vercel.app

# Storage Provider Selection (s3 or cloudinary)
STORAGE_PROVIDER=s3

# AWS S3 Configuration (Required if STORAGE_PROVIDER=s3)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_S3_BUCKET_NAME=your-bucket-name
AWS_S3_FOLDER_PREFIX=law-firm-files

# Cloudinary (Required if STORAGE_PROVIDER=cloudinary)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Stripe
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# OpenAI
OPENAI_API_KEY=your_openai_api_key

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Session
SESSION_SECRET=your_session_secret

# Beem SMS (Optional - for bulk SMS feature)
# Get your credentials from https://beem.africa/
BEEM_API_KEY=your_beem_api_key
BEEM_SECRET_KEY=your_beem_secret_key
BEEM_SOURCE_ADDR=your_sender_id

# Google OAuth (Optional - for Gmail newsletter feature)
# Get your credentials from https://console.cloud.google.com/
# Create OAuth 2.0 credentials and add authorized redirect URI: https://your-domain.com/admin/newsletter/auth/callback
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=https://samlex-client.vercel.app/admin/newsletter/auth/callback